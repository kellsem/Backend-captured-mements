generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
  relationMode = "prisma" // Necess√°rio para MongoDB
}

model User {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  fullName   String
  email      String   @unique
  password   String
  created_at DateTime @default(now()) @map("createdAt")
  updated_at DateTime @updatedAt @map("updatedAt")
  registeredMoment RegisteredMoments[]

  @@map("user")
}
model RegisteredMoments {
  id                   String     @id @default(auto()) @map("_id") @db.ObjectId
  title                String  
  story                String
  visitedLocation      String []  @default([])
  isFavorite           Boolean    @default(false)
  userId               String     @db.ObjectId
  createdOn            DateTime   @default(now())
  imageUrl             String
  visitedDate          DateTime
  
  user User @relation(fields: [userId], references: [id])

  @@map("registereg-moments")
} 